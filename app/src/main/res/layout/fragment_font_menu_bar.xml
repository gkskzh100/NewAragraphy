<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_font_menu_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--끌어올릴 버튼-->
    <ImageButton
        android:id="@+id/view_font_menu_bar_controller"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:src="@drawable/write_pallet_btn"
        android:scaleType="centerInside"/>


    <!--폰트선택 폰트편집 색상편집 사진편집 편집완료   Tab-->
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/view_font_menu_bar_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:pstsIndicatorHeight="2dp"/>


    <!--폰트선택 폰트편집 색상편집 사진편집 편집완료   ViewPager-->
    <android.support.v4.view.ViewPager
        android:id="@+id/view_font_menu_bar_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/UserCaptureLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/choosedImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/bottomsheet"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/bottomLayout">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="46"/>
        <ImageButton
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_weight="8"
            android:background="@drawable/download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/choosedDownloadBtn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/topsheet"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/topLayout">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <ImageButton
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:layout_weight="6"
            android:background="@drawable/exit_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/choosedExitBtn"/>
    </LinearLayout>
</FrameLayout>
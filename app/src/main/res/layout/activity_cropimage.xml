<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="100">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="#D0D0D0"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    <com.theartofdev.edmodo.cropper.CropImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cropImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="82" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14.8"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"></Space>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="18"
            android:orientation="vertical"
            android:weightSum="100">

            <ImageView
                android:id="@+id/freeCropImageBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="50"
                android:src="@drawable/cropfield_free_select" />

            <TextView
                android:textSize="11sp"
                android:id="@+id/cropFreeTv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="자유롭게"
                android:textColor="#1B8CFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="18"
            android:orientation="vertical"
            android:weightSum="100">

            <ImageView
                android:id="@+id/squareCropImageBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="50"
                android:src="@drawable/cropfield_1_1" />

            <TextView
                android:textSize="11sp"
                android:id="@+id/cropSquareTv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="1:1"
                android:textColor="@color/dark" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="18"
            android:orientation="vertical"
            android:weightSum="100">

            <ImageView
                android:id="@+id/hQuadrangleCropImageBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="50"
                android:src="@drawable/cropfield_4_3" />

            <TextView
                android:textSize="11sp"
                android:id="@+id/cropHsquareTv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="4:3"
                android:textColor="@color/dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:orientation="vertical"
            android:weightSum="100">

            <ImageView

                android:id="@+id/vQuadrangleCropImageBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="50"
                android:src="@drawable/cropfield_3_4" />

            <TextView

                android:textSize="11sp"
                android:id="@+id/cropVsquareTv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="3:4"
                android:textColor="@color/dark" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"></Space>


    </LinearLayout>
</LinearLayout>